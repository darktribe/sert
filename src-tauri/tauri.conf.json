{
  "productName": "Vinsert",
  "version": "1.0.0",
  "identifier": "com.saigetsudo.vinsert-editor",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Vinsert - Simple Editor",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "maximized": false,
        "decorations": true,
        "alwaysOnTop": false,
        "fullscreen": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements-developer-id.plist",
      "signingIdentity": "Developer ID Application: akihiko ouchi (UVC7CS2KN7)",
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    },
    "category": "DeveloperTool",
    "shortDescription": "Simple Text Editor for Developers",
    "longDescription": "Vinsert Is a New Simple Editor by Rust and Tauri - and Theme and Extensions and Python included.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256", 
      "timestampUrl": "",
      "wix": {
        "language": "ja-JP"
      }
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}